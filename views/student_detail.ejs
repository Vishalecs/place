<!DOCTYPE html>
<html>
<head>
  <title>Student Details</title>
  <link rel="stylesheet" href="/css/studentdetail.css">
</head>
<body>
  <div class="student-container">
    <h1>Student Details</h1>
  
    <table>
      <tr>
        <th>Field</th>
        <th>Value</th>
      </tr>
      <tr>
        <td><strong>Name:</strong></td>
        <td><%= student.name %></td>
      </tr>
      <tr>
        <td><strong>Email:</strong></td>
        <td><%= student.email %></td>
      </tr>
      <tr>
        <td><strong>Batch:</strong></td>
        <td><%= student.batch %></td>
      </tr>
      <tr>
        <td><strong>College:</strong></td>
        <td><%= student.college %></td>
      </tr>
      <tr>
        <td><strong>DSA Score:</strong></td>
        <td><%= student.dsaScore %></td>
      </tr>
      <tr>
        <td><strong>WebD Score:</strong></td>
        <td><%= student.webdScore %></td>
      </tr>
      <tr>
        <td><strong>React Score:</strong></td>
        <td><%= student.reactScore %></td>
      </tr>
      <tr>
        <td><strong>Placed:</strong></td>
        <td><%= student.placed %></td>
      </tr>
    </table>
    <div class="button-container">
      <button class="edit-button" onclick="location.href='/student/edit/<%= student._id %>'">Edit Student</button>
      <form action="/student/delete/<%= student._id %>?_method=DELETE" method="POST" style="display: inline;">
        <button class="delete-button" type="submit" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
      </form>
    </div>
  </div>

  <div class="interview-container">
    <h2>Interview Details</h2>
  
    <ul>
      <% student.interviews.forEach(function(interview) { %>
        <li><strong>Company Name:</strong> <%= interview.companyName %></li>
        <li><strong>Date:</strong> <%= interview.date %></li>
        <br>
      <% }); %>
      
    </ul>
  
    <h2>Select Interview</h2>
  
    <form action="/student/<%= student._id %>/interview/select" method="POST">
      <select name="selectedInterview">
        <% interviews.forEach(function(interview) { %>
          <option value="<%= interview._id %>"><%= interview.companyName %></option>
        <% }); %>
      </select>
      <input type="submit" value="Submit">
    </form>
  </div>
  
</body>
</html>
